<%= render 'shared/navbar_two' %>

<h1 class="booking-h1">Book to park at <%= @space.title %></h1>

<div class="content col-xs-6">

  <div class="card-container">
   <div class="row">


     <div class="col-xs-12">

      <div class="booking-form">
        <%= simple_form_for [@space, @booking] do |f| %>
        <%= f.input :start_datetime, as: :datetime, html5: true, label: "Start time" %>
        <%= f.input :end_datetime, as: :datetime, html5: true, label: "End time" %>
        <%= f.submit "Book now", class: "btn-park"  %>
        <% end %>
      </div>


     </div>


   </div>
  </div>

 <div id="map"
   style="width: 100%;
   height: 600px;"
   data-markers="<%= @markers.to_json %>"
   data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>





