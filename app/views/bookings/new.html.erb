<h1>Book to park at <%= @space.title %></h1>

<%= simple_form_for [@space, @booking] do |f| %>
<%= f.input :start_datetime, as: :datetime, html5: true, label: "Start time" %>
<%= f.input :end_datetime, as: :datetime, html5: true, label: "End time" %>
<%= f.submit %>
<% end %>

